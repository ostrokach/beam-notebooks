#!/bin/bash

# Update jupyterlab version and install labextensions
conda install -yq 'jupyterlab>=1.0'
jupyter labextension install @jupyter-widgets/jupyterlab-manager 
jupyter labextension install @jupyterlab/toc
jupyter labextension install jupyterlab_bokeh

set -ev

mkdir -p opt

pushd opt
wget --quiet https://www-us.apache.org/dist/kafka/2.3.0/kafka_2.11-2.3.0.tgz && tar -xf kafka_2.11-2.3.0.tgz
git clone https://github.com/GoogleCloudPlatform/kafka-pubsub-emulator.git
popd


